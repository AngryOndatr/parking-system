# Environment variables for local development (IntelliJ IDEA)
# Copy these to Run/Debug Configuration > Environment Variables

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5433/parking_db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# Redis Configuration
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=

# Eureka Configuration (for local development use localhost)
EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://localhost:8761/eureka/

# JWT Configuration
JWT_SECRET=ParkingSystemSecretKey2025!VeryLongAndSecureKey123456789ForDevelopmentOnlyChangeInProduction

# Server Port
PORT=8080

# Profile - use 'development' for debug logging, or 'prod-security' for production-like setup
SPRING_PROFILES_ACTIVE=development

# Hibernate DDL - update for development, validate for production
# update: Hibernate will update the schema automatically
# validate: Hibernate will only validate the schema (safer)
HIBERNATE_DDL_AUTO=update

